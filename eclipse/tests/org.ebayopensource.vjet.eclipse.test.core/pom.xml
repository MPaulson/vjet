<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>
   
   <parent>
      <groupId>org.ebayopensource.vjet.eclipse.tests</groupId>
      <artifactId>test-parent</artifactId>
      <version>1.0.0-SNAPSHOT</version>
   </parent>
   
   <groupId>org.ebayopensource.vjet.eclipse.tests</groupId>
   <artifactId>core.test</artifactId>
   <packaging>eclipse-test-plugin</packaging>
   <version>1.0.0-SNAPSHOT</version>
   <name>VJET Test: Eclipse Core Tests</name>

   <profiles>
	<profile>
		<id>mac-family</id>
		<activation>
      		<os>
        			<family>mac</family>
      		</os>
    		</activation>
		<properties>
			<eclipse.test.argline>-Xms512m -Xmx1024m -XX:MaxPermSize=256M -XstartOnFirstThread</eclipse.test.argline>
   		</properties>
	</profile>
	<profile>
		<id>non-mac-families</id>
		<activation>
      		<os>
        			<family>!mac</family>
      		</os>
    		</activation>
		<properties>
			<eclipse.test.argline>-Xms512m -Xmx1024m -XX:MaxPermSize=256M</eclipse.test.argline>
   		</properties>
	</profile>
   </profiles>

	<build>
    <plugins>
	    <plugin>
	    <groupId>org.eclipse.tycho</groupId>
	         <artifactId>tycho-surefire-plugin</artifactId>
	         <version>${tycho-version}</version>
	         <configuration>
	            <argLine>${eclipse.test.argline}</argLine>
	          	<useUIHarness>true</useUIHarness>
	            <testSuite>org.ebayopensource.vjet.eclipse.core.test</testSuite>
	            <testClass>org.ebayopensource.vjet.eclipse.core.test.AllTests</testClass>
	        </configuration>
	      </plugin>
    </plugins>
  </build>
</project>
